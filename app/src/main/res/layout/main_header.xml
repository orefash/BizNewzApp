<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/header_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mbg2"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/logoView"
        android:layout_alignBottom="@+id/botm"

        />

    <ImageView
        android:id="@+id/logoView"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/mlogo"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="130dp" />

    <Button
        android:layout_marginStart="3dp"
        android:textAlignment="textStart"
        android:background="@android:color/transparent"
        android:drawableTint="@color/colorWhite"
        android:drawableStart="@drawable/filter_icn"
        android:textColor="@color/colorWhite"
        android:text="@string/filterTxt"
        android:id="@+id/filterBtn"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/logoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <SearchView
        android:layout_marginStart="10dp"
        android:id="@+id/companySearch"
        android:layout_toLeftOf="@+id/filterBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/logoView"
        android:layout_width="match_parent"
        android:queryHint="Search by Company"
        android:layout_height="wrap_content"/>

    <View
        android:layout_below="@+id/companySearch"
        android:id="@+id/botm"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>